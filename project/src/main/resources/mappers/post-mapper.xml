<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<!-- POSTS 테이블에서 CRUD에 필요한 SQL 문장들을 선언 -->
<mapper namespace="com.itwill.project.repository.PostDao">
    
    <!-- POSTS 테이블 전체 검색, 아이디 내림차순 정렬 -->
    <select id="selectOrderByDesc" resultType="Post">
        SELECT posts.*, users.NICKNAME FROM posts INNER JOIN users ON posts.user_id = users.user_id order by post_id desc
    </select>
    
    <select id="postCount" resultType="Long">
        SELECT COUNT(*) FROM posts;
    </select>
            

    <!-- POSTS 테이블에서 아이디(PK)로 검색 -->
    <select id="selectById" resultType="Post">
        SELECT posts.*, users.NICKNAME FROM posts
        INNER JOIN users ON
        posts.user_id = users.user_id
        where post_id = #{post_id}
    </select>
    
    <!-- POSTS 테이블에 새 포스트 삽입 -->
    <insert id="insert">
        INSERT INTO POSTS (USER_ID, TITLE, CONTENT, sub_category_id) 
        VALUES (#{user_id}, #{title}, #{content}, #{sub_categoru_id})
    </insert>
    
    <!--POSTS 테이블에서 해당 아이디의 제목, 내용, 수정시간을 업데이트 -->
    <update id="update">
        update POSTS set TITLE = #{title}, 
                    CONTENT = #{content},  
                    MODIFIED_TIME = systimestamp 
                    where ID = #{post_id}
    </update>
    
    <delete id="delete">
        delete from POSTS where ID = #{post_id}
    </delete>
    
